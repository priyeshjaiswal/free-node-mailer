# Server configuration
PORT=5000

# Primary SMTP (Brevo/Sendinblue)
BREVO_HOST=smtp-relay.brevo.com
BREVO_PORT=587
BREVO_SECURE=false
BREVO_USER=your_brevo_smtp_user
BREVO_PASS=your_brevo_smtp_password

# Fallback SMTP (Gmail or any other provider)
FALLBACK_HOST=smtp.gmail.com
FALLBACK_PORT=465
FALLBACK_SECURE=true
FALLBACK_USER=your_fallback_email@gmail.com
FALLBACK_PASS=your_fallback_app_password

# Default "from" email
FROM_EMAIL="Mailer Service <no-reply@yourdomain.com>"

# Daily email sending limit for primary SMTP
DAILY_LIMIT=300
